pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning the code...'
            }
        }

        stage('Build') {
            steps {
                echo 'Running build steps...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying app...'
            }
        }
    }
}
